// ‚ö†Ô∏è USE AT YOUR OWN RISK
// Auto Clicker for Simulation Clicker-type games

(function () {
    console.log("üöÄ Auto Clicker started!");

    // === CONFIGURABLE SETTING ===
    const clickInterval = 10; // Lower = faster clicking (e.g., 10ms)

    // === MAIN CLICK FUNCTION ===
    function autoClick() {
        const clickButton = document.querySelector(".data-v-324f9ad2"); // <-- Update this selector if needed
        if (clickButton) {
            clickButton.click();
        } else {
            console.warn("‚ö†Ô∏è Click button not found.");
        }
    }

    const clicker = setInterval(autoClick, clickInterval);

    // === STOP FUNCTION ===
    window.stopAutomation = function () {
        clearInterval(clicker);
        console.log("üõë Auto Clicker stopped.");
    };

    console.log("‚úÖ Running! To stop, type: stopAutomation()");
})();

})();
